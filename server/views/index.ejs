<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body ng-app="app">
    <div class="container">
        <header class="row">
            <h1><%= title %></h1>
        </header>
        <article class="row">
            <ui-view></ui-view>
        </article>
        <footer class="row">
            <small>Made with AngularJS</small>
        </footer>
    </div>
    <script type="text/ng-template" id="/list.html">
        <section ng-controller="ListController as listController">
            <h2>Inventories</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Date</th>
                        <th class="text-center">Score</th>
                        <th class="text-center">Degree</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="inventory in listController.inventories">
                        <td class="text-center">
                            {{listController.formatDate(inventory.date)}}
                        </td>
                        <td class="text-center">
                            {{inventory.score}}
                        </td>
                        <td class="text-center">
                            {{inventory.degree}}
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary btn-sm" href="#/inventories/{{inventory._id.$oid}}">Show</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </script>
    <script type="text/ng-template" id="/show.html">
        <section ng-controller="ShowController as showController">
            <h2>Inventory</h2>
            <dl class="dl-horizontal">
                <dt>Date:</dt>
                    <dd>{{showController.formatDate(showController.inventory.date)}}</dd>
                <dt>Score:</dt>
                    <dd>{{showController.inventory.score}}</dd>
                <dt>Degree:</dt>
                    <dd>{{showController.inventory.degree}}</dd>
            </dl>
        </section>
    </script>
    <script type="text/javascript" src="/js/vendor/lodash.js"></script>
    <script type="text/javascript" src="/js/vendor/angular.js"></script>
    <script type="text/javascript" src="/js/vendor/angular-ui-router.js"></script>
    <script type="text/javascript" src="/js/vendor/angular-mongolab.js"></script>
    <script type="text/javascript" src="/js/vendor/angular-wizard.js"></script>
    <script type="text/javascript" src="/js/vendor/moment.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
</body>
</html>
